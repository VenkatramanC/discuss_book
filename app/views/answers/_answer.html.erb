<h2>Blog</h2>
  <h3>
    <%= @question.question %>
  </h3>
<ul>
    <% @question.answers.each do|answer| %>
  <li>

  <div class="row">
      <div class="col-md-10">
       <%= answer.answer %>
      </div>
      <div class="col-md-2">
       <%= answer.created_at %>
      </div>
  </div>
  <div class="row">
  <div class="col-md-10">

  </div>
  <div class="col-md-1">
     <%= link_to "Edit" ,edit_question_answer_path(question_id: @question.id , id: answer.id) , class: "btn btn-primary btn-block"%>
  </div>
    <div class="col-md-1">
     <%= link_to "Delete" , question_answer_path(id: answer.id) , method: :delete%>
     </div>
  </div>
  </li>
  <% end %>
</ul>
